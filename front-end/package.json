{
  "name": "front-end",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "postcss-cli": "^8.0.0",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "tailwindcss": "^1.8.10",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "dev": "yarn run watch:css && react-scripts start",
    "build": "yarn run build:css && GENERATE_SOURCEMAP=false react-scripts build",
    "watch:css": "postcss src/styles/tailwind.css -o src/styles/tailwind-output.css",
    "build:css": "postcss src/styles/tailwind.css -o src/styles/tailwind-output.css --env production"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
